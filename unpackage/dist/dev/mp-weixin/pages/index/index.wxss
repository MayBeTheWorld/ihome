
.header {
	width: 100%;
	height: 98rpx;
    position: relative;
    display: flex;
	justify-content: space-around;
    align-items: center;
	margin-top: 10rpx;
}
.profileView{
	display: block;
	margin: 5rpx 5rpx;
	border-radius: 50rpx;
}
.profileView > image {
	width: 100rpx;
	height: 100rpx;
}
.imageView { 
	margin: 0 20rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.icon {
	width: 50rpx;
	height: 50rpx;
}
.searchBox {
	width: 100%;
	margin: 0 0 0 20rpx;
	display: flex;
	flex-direction: row;
	justify-items: center;
	align-items: center;
	border-radius: 10rpx;
	border: 2rpx solid #32B0B5;
}
.search {
    height: 100%;
	width: 100%;
    font-size: 0.75rem;
    border: 0;
	margin-left: 10rpx;
	padding-top: 5rpx;
}
.banner {
	width: 100%;
	height: 268rpx;
	margin: 30rpx auto 44rpx;
}
.swiper{
	height: 268rpx;
}
.item{
	position:relative;
	display: block;
	width: 686rpx;
	height: 268rpx;
	margin: 0 auto;
	border-radius: 14rpx;
	overflow: hidden;
}
.img {
	display: block;
	width: 100%;
	height: 100%;
}
.systemBox {
	padding: 0;
	margin: 0;
	width: 750rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	flex-wrap: wrap;
	position: relative;
}
