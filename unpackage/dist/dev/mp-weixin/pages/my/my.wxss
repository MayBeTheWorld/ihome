.systemBox {
	padding: 0;
	margin: 0;
	width: 750rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	flex-wrap: wrap;
	position: relative;
	background-color: #FBFBFB;
}
.status-bar {
  height: var(--status-bar-height);
  width: 100%;
}
.pageBox {
  height: calc(100vh - 110rpx);
}
.loginState {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  font-size: 40rpx;
  font-weight: 900;
  padding: 30rpx 0;
}
.loginState .profileView {
  margin: 0 30rpx;
}
.loginInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #666666;
  margin: 0 40rpx;
  font-size: 30rpx;
}
.loginInfo .Info {
  flex: 1;
}
.loginInfo .Info3 {
  flex: 1.5;
}
.functionsTitle {
  margin: 40rpx 40rpx 0 40rpx;
  font-weight: 900;
}
.functions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(2, 160rpx);
  margin: 20rpx 40rpx;
}
.functions .functioinItem {
  display: flex;
  flex-direction: column;
  justify-items: center;
  width: 100%;
  margin: 20rpx 0;
}
.functions .functioinItem .functionsText {
  display: flex;
  justify-content: center;
  margin-top: 15rpx;
  color: #666666;
  font-size: 26rpx;
}
.topic {
  margin: 0 40rpx 30rpx 40rpx;
  padding: 40rpx 40rpx 30rpx 40rpx;
  border-radius: 40rpx;
}
.topic .topicTitle {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.topic .topicText {
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  color: #8f8f8f;
}
.hot {
  background: linear-gradient(to right top, #f5f6f8, #e5d7f0);
}
.new {
  background: linear-gradient(to right top, #f4f6f9, #f9e6d6);
}
.gap {
  height: 20rpx;
}